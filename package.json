{
  "name": "vscode-mdhatena",
  "displayName": "vscode-mdhatena",
  "description": "markdown to hatenablog's md",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/andanteyk/vscode-mdhatena/"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-mdhatena.mdhatena",
        "title": "Markdown to HatenaBlog md"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscode-mdhatena.mdhatena",
          "when": "editorLangId == markdown"
        }
      ]
    },
    "configuration": {
      "title": "MdHatena",
      "properties": {
        "mdHatena.replacements": {
          "type": "string",
          "default": "\\$\\$((.*\\r?\\n)*?)\\$\\$\n<div align=\"center\">[tex:$1]</div>\n\\$(.*?)\\$\n[tex:$1]\n\\r?\\n\n  \\n\n```(.*?)  \n```$1\n",
          "description": "Specify the string before and after replacement.",
          "editPresentation": "multilineText"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "ts-loader": "^9.4.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "@vscode/test-electron": "^2.3.0"
  }
}